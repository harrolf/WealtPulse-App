# --- Backend Settings ---
PYTHONUNBUFFERED=1
ENVIRONMENT=development # Set to production for strict security checks

# Database Connection
# Supports: sqlite+aiosqlite:///..., postgresql+asyncpg://...
DATABASE_URL=sqlite+aiosqlite:///./data/wealthpulse.db

# Security & Auth
SECRET_KEY=dev_secret_key_change_in_production
REFRESH_TOKEN_SECRET=dev_refresh_secret_key_change_in_production
ENCRYPTION_KEY=dev_encryption_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CSRF Configuration
CSRF_COOKIE_NAME=wp_csrftoken
CSRF_COOKIE_HTTPONLY=False

# CORS Configuration
# Comma separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# App Logic
DEFAULT_CURRENCY=CHF
USE_MOCK_DATA=False
MARKET_DATA_RETENTION_DAYS=7
DECIMAL_PRECISION=8

# --- Frontend Settings ---
# Frontend development server port (default: 3000)
VITE_PORT=3000

# Proxy target for local development (defaults to http://localhost:8000 if unset)
# VITE_DEV_PROXY_TARGET=http://localhost:8000
